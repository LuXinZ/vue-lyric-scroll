{
    "name": "vue-lyric-scroll",
    "version": "0.0.1",
    "description": "a vue component for scrolling lyric",
    "main": "dist/lyric-scroll.umd.js",
    "module": "dist/lyric-scroll.esm.js",
    "unpkg": "dist/lyric-scroll.min.js",
    "browser": {
        "./sfc": "src/lyric-scroll.vue"
    },
    "scripts": {
        "build": "npm run build:umd & npm run build:es & npm run build:unpkg",
        "build:umd": "rollup --config build/rollup.config.js --format umd --file dist/lyric-scroll.umd.js",
        "build:es": "rollup --config build/rollup.config.js --format es --file dist/lyric-scroll.esm.js",
        "build:unpkg": "rollup --config build/rollup.config.js --format iife --file dist/lyric-scroll.min.js"
    },
    "devDependencies": {
        "node-sass": "^4.9.3",
        "rollup": "^0.64.1",
        "rollup-plugin-buble": "^0.19.2",
        "rollup-plugin-sass": "^0.9.2",
        "rollup-plugin-terser": "^1.0.1",
        "rollup-plugin-vue": "^4.3.2",
        "sass-loader": "^7.1.0",
        "vue": "^2.5.17",
        "vue-template-compiler": "^2.5.17"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sluggishpj/vue-lyric-scroll.git"
    },
    "keywords": [
        "lyric",
        "scroll",
        "vue"
    ],
    "author": "sluggishpj",
    "license": "MIT"
}
